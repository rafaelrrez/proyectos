<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.patients.BookAppointmentPatientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/back_icon"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/tvConsultation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/inter"
                android:text="Appointment"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/curve_linear"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProfessional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:drawableStart="@drawable/doctor_icon"
                android:drawablePadding="10dp"
                android:drawableTint="@color/primaryColor"
                android:fontFamily="@font/inter_regular"
                android:text="Specialist"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:drawableStart="@drawable/location_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Address"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:drawableStart="@drawable/city_icon"
                android:drawablePadding="10dp"
                android:drawableTint="@color/primaryColor"
                android:fontFamily="@font/inter_regular"
                android:text="City"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAppointmentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:drawableStart="@drawable/calendar_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Appointment Date"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAppointmentTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:drawableStart="@drawable/clock_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Appointment Time"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/login_btn"
                android:fontFamily="@font/inter_semibold"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
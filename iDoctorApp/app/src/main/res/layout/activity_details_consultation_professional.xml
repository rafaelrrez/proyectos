<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.professionals.DetailsConsultationProfessionalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/back_icon"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/tvConsultation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/inter"
                android:text="Consultation Details"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/curve_linear">

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/et_style"
                android:drawableStart="@drawable/address_icon"
                android:drawablePadding="20dp"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter your address"
                android:textColorHint="#717784"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textColor="#717784" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_style"
                android:drawableStart="@drawable/city_icon"
                android:drawablePadding="20dp"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter your city"
                android:textColorHint="#717784"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textColor="#717784" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_style"
                android:drawableStart="@drawable/email_icon"
                android:drawablePadding="20dp"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter your email"
                android:textColorHint="#717784"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textColor="#717784" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_style"
                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="20dp"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter your phone"
                android:textColorHint="#717784"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textColor="#717784" />

            <EditText
                android:id="@+id/etPhoneAux"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_style"
                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="20dp"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter auxiliary phone number"
                android:textColorHint="#717784"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:textColor="#717784" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="150dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_semibold"
                    android:background="@drawable/login_btn"
                    android:text="Edit"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="150dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_semibold"
                    android:background="@drawable/login_btn"
                    android:text="Delete"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.IDoctor2" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorUnselected</item>
        <item name="colorSecondaryVariant">@color/colorUnselected</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="CustomAppCompatSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:popupBackground">@drawable/custom_spinner</item>
    </style>

</resources>
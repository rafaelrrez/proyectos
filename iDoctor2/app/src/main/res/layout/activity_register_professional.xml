<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.RegisterProfessionalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/inter"
            android:text="Sign Up"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCollegiateNumber"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/dni_icon"
            android:drawablePadding="20dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your collegiate number"
            android:textColorHint="#717784"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#717784" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/et_style"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textColor="#717784"
                android:textSize="15sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="Select the type of specialty:"/>

            <RadioButton
                android:id="@+id/rbGeneral"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="General"
                android:textColor="#717784"
                android:buttonTint="#A1A8B0"
                android:drawableStart="@drawable/speciality_icon"
                android:drawablePadding="20dp"
                android:layout_marginHorizontal="10dp"
                android:paddingStart="16dp" />

            <RadioButton
                android:id="@+id/rbPhysiotherapy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:buttonTint="#A1A8B0"
                android:layout_marginHorizontal="10dp"
                android:drawableStart="@drawable/physiotherapist_icon"
                android:drawablePadding="20dp"
                android:paddingStart="16dp"
                android:text="Physiotherapy"
                android:textColor="#717784" />

            <RadioButton
                android:id="@+id/rbDentistry"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:buttonTint="#A1A8B0"
                android:layout_marginHorizontal="10dp"
                android:drawableStart="@drawable/dentistry_icon"
                android:drawablePadding="20dp"
                android:paddingStart="16dp"
                android:text="Dentistry"
                android:textColor="#717784" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/et_style"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="message icon"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/baseline_featured_play_list_24" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:textColor="#717784"
                android:hint="Enter your description"
                android:textColorHint="#717784"
                android:fontFamily="@font/inter_regular"
                android:textSize="15sp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:background="@drawable/login_btn"
            android:text="Sign Up"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/inter"
            android:text="Sign Up"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/user_icon"
            android:drawablePadding="20dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your username"
            android:textColorHint="#717784"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#717784" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/password_icon"
            android:drawablePadding="20dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your password"
            android:textColorHint="#717784"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#717784" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/user_icon"
            android:drawablePadding="20dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your name"
            android:textColorHint="#717784"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#717784" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/user_icon"
            android:drawablePadding="20dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your surname"
            android:textColorHint="#717784"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#717784" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/et_style"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textColor="#717784"
                android:textSize="15sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="Select account type:"/>

            <RadioButton
                android:id="@+id/rbProfessional"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Professional"
                android:textColor="#717784"
                android:buttonTint="#A1A8B0"
                android:drawableStart="@drawable/doctor_icon"
                android:drawablePadding="20dp"
                android:layout_marginHorizontal="10dp"
                android:paddingStart="16dp" />

            <RadioButton
                android:id="@+id/rbPatient"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:buttonTint="#A1A8B0"
                android:layout_marginHorizontal="10dp"
                android:drawableStart="@drawable/patient_icon"
                android:drawablePadding="20dp"
                android:paddingStart="16dp"
                android:text="Patient"
                android:textColor="#717784" />

        </RadioGroup>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:background="@drawable/login_btn"
            android:text="Continue"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
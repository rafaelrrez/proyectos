<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.RegisterPatientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/inter"
            android:text="Sign Up"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/email_icon"
            android:drawablePadding="20dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your email"
            android:textColorHint="#717784"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#717784" />

        <EditText
            android:id="@+id/etDni"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/dni_icon"
            android:drawablePadding="20dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your DNI"
            android:textColorHint="#717784"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#717784" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/phone_icon"
            android:drawablePadding="20dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your phone"
            android:textColorHint="#717784"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:textColor="#717784" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchInsurance"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:fontFamily="@font/inter_regular"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/insurance_icon"
            android:drawablePadding="20dp"
            android:paddingHorizontal="10dp"
            android:textColor="#717784"
            android:text="Insurance" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:background="@drawable/login_btn"
            android:text="Sign Up"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>